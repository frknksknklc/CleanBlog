<%- include('partials/_header') -%>
<body>

  <%- include('partials/_navigation') -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
                              
        <% for (let i = 0; i <posts.length ; i++) { %>
        <div class="post-preview">
          <img style="height: 300px;"src="<%= posts[i].image %>" alt="Image">
          <a href="/posts/<%= posts[i]._id %>">
            <h2 class="post-title">
              <%= posts[i].title %>
            </h2>
            <h3 class="post-subtitle">
              <%= posts[i].detail %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="https://github.com/frknksknklc">Furkan Keskinkilic</a>
            <%= posts[i].dateCreated.toDateString() %></p>
        </div>
        
        <% } %>
        <hr>


        <!-- Pager -->
        <div class="clearfix">
          <% if (pages > 0) { %>
            <ul>
              <% for (i=1; i <=pages; i++) { %>
                <%   if (i == current) { %>
                  <li class="btn float-left"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                <% } else if (i < pages) { %>
                  <li class="btn float-left"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                <%  } else { %>
                  <li class="btn btn-primary float-left"><a href="/?page=<%= i %>" class="nav-link tm-paging-link">Older Posts</a></li>
                <%  } %>
              <%  } %>
            </ul>
          <% } %>
         </div>
      </div>
    </div>
  </div>

  <hr>

  <%- include('partials/_footer') -%>


</body>

</html>
